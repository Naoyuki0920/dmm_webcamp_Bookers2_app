
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
<%= render "books/error", model: @user %>
      
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>

      <div class="form-group">
        <div>
          <label for="inputName">Name</label>
        </div>
        <div>
          <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前", class:"form-control name"%>
        </div>
      </div>
      <div class="form-group">
        <div>
          <label for="user_image">Image</label>
        </div>
        <div>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
      </div>
      <div class="form-group">
        <div>
          <label for="user_introduction">Introduction</label>
        </div>
        <div>
          <%= f.text_area :introduction, id:"user_introduction", class:"form-control introduction" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
